body {
  margin: 0;
  font-family: Arial, sans-serif;
  background-color: #FAF7F2;
  color: #3B2F2F;
}

.header {
  background: #fff;
  padding: 16px 24px;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.brand {
  margin: 0;
  font-size: 24px;
}

nav a {
  margin-left: 16px;
  text-decoration: none;
  color: #3B2F2F;
}

nav a.cta {
  font-weight: bold;
  color: #8B0000;
}

.container {
  max-width: 900px;
  margin: 40px auto;
  padding: 0 20px;
}

.hero h2 {
  font-size: 36px;
}

.button {
  display: inline-block;
  margin-top: 20px;
  padding: 12px 20px;
  background: #8B0000;
  color: #fff;
  text-decoration: none;
  border-radius: 4px;
}

.highlights {
  display: flex;
  gap: 20px;
  margin-top: 40px;
}

.highlights div {
  background: #fff;
  padding: 20px;
  border-radius: 6px;
  flex: 1;
}

.product {
  background: #fff;
  padding: 20px;
  margin-bottom: 16px;
  border-radius: 6px;
}

.footer {
  text-align: center;
  padding: 20px;
  background: #fff;
  margin-top: 40px;
}
